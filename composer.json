{
    "name": "dmlab/skapp",
    "description": "A fast ZF2 skeleton application",
    "license": "BSD-3-Clause",
    "keywords": [
        "framework",
        "zf2"
    ],
    "homepage": "https://github.com/leogr/ZendSkeletonApp",
    "require": {
        "php": ">=5.4.0",
        "zendframework/zendframework": "~2",
        "facebook/php-sdk": "3.2.*",
        "widmogrod/zf2-assetic-module": "1.3.*",
        "oyejorge/less.php": "~1.5",
        "cssmin/cssmin": "*",
        "mrclay/minify": "2.2.*",
        "pruno/mongo-vc": "0.5.*",
        "ripaclub/sphinxsearch": ">=0.6",
        "robloach/component-installer": "*",
        "components/jquery": "1.11.*",
        "rogeriopradoj/respond": "*",
        "afarkas/html5shiv": "*",
        "twbs/bootstrap": "3.1.*",
        "fortawesome/font-awesome": "4.0.*",
        "ripaclub/zf2-hanger-snippet": "dev-develop"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ripaclub/zf2-hanger-snippet.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/pruno/mongo-vc.git"
        },
        {
            "type": "package",
            "package": {
                "name": "cssmin/cssmin",
                "version": "3.0.1",
                "dist": { "url": "http://cssmin.googlecode.com/files/cssmin-v3.0.1.php", "type": "file" },
                "autoload": { "classmap": [ "cssmin-v3.0.1.php" ] }
            }
        }
    ],
    "scripts": {
        "post-install-cmd": [
            "sudo chmod -R 777 public/_/assets",
            "sudo chmod -R 777 data"
        ]
    }
}
